<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <P13nDialog showReset="true"
        showResetEnabled="{path: '/ShowResetEnabled'}"
        ok="onOK"
        cancel="onCancel"
        reset="onReset"
        class="sapUiSizeCompact">
        <panels>
            <P13nColumnsPanel changeColumnsItems="onChangeColumnsItems"
                items="{path: '/columnMetadata'}"
                columnsItems="{path: '/p13n/columnsItems'}">
                <items>
                    <P13nItem columnKey="{name}"
                        text="{name} ({longDescription})"/>
                </items>
                <columnsItems>
                    <P13nColumnsItem columnKey="{columnKey}"
                        index="{index}"
                        visible="{visible}"/>
                </columnsItems>
            </P13nColumnsPanel>
        </panels>
    </P13nDialog>
</core:FragmentDefinition>