<mvc:View controllerName="devepos.qdrt.controller.Entity"
    xmlns:app="devepos.qdrt.control"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    height="100%">

    <f:DynamicPage fitContent="true"
        class="sapUiNoContentPadding">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Entity {vm>/entity/name}"></Title>
                </f:heading>
                <f:actions>
                    <ToggleButton icon="sap-icon://filter"
                        pressed="{vm>/sideFilterVisible}"
                        type="Transparent" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <app:SideFilterView sideFilterVisible="{vm>/sideFilterVisible}">
                <app:content>
                    <Panel height="100%">
                        <layoutData>
                            <l:SplitterLayoutData size="80%" />
                        </layoutData>
                        <Table headerText="Data for {vm>/entity/name}">
                        </Table>
                    </Panel>
                </app:content>
                <app:sideFilter>
                    <Panel headerText="Filters">
                    </Panel>
                </app:sideFilter>
            </app:SideFilterView>
        </f:content>
    </f:DynamicPage>
</mvc:View>